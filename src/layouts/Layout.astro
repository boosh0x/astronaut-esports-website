---
import fetchCache from "../utils/fetchCache";
import Header from "../components/Header.astro";

type Props = {
  title: string;
};

const { title } = Astro.props;

export const { metadata, schedule } = fetchCache();

export const socials = {
  twitter: "https://twitter.com/astronautesport",
  discord: "https://discord.gg/9SYPNebu9Z",
  twitch: "https://www.twitch.tv/astronautesports",
  youtube: "https://www.youtube.com/@AstronautEsports",
};

export const navigation = [
  {
    name: "Teams",
    url: "#teams",
  },
  {
    name: "News",
    url: "#news",
  },
  {
    name: "Schedule",
    url: "#schedule",
  },
];
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="black" />

    <link rel="icon" type="image/png" href="/logo.png" />
    <link
      rel="preload"
      href="/fonts/Stargaze.ttf"
      as="font"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/StargazeStencil.ttf"
      as="font"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/XXIX.ttf"
      as="font"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/RobotoCondensed.ttf"
      as="font"
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      @font-face {
        font-family: "Stargaze";
        src: url(/fonts/Stargaze.ttf) format("TrueType");
      }
      @font-face {
        font-family: "StargazeStencil";
        src: url(/fonts/StargazeStencil.ttf) format("TrueType");
      }
      @font-face {
        font-family: "XXIX";
        src: url(/fonts/XXIX.ttf) format("TrueType");
      }
      @font-face {
        font-family: "RobotoCondensed";
        src: url(/fonts/RobotoCondensed.ttf) format("TrueType");
      }

      .cut-corners {
        --all: 0px;
        -webkit-mask: linear-gradient(45deg, transparent 10px, #fff 0) bottom
            left,
          linear-gradient(-45deg, transparent 0 0, #fff 0) bottom right,
          linear-gradient(135deg, transparent 0 0, #fff 0) top left,
          linear-gradient(-135deg, transparent 0 10px, #fff 0) top right;
        -webkit-mask-size: 50.5% 50.5%;
        -webkit-mask-repeat: no-repeat;
      }

      .cut-corners-lg {
        --all: 0px;
        -webkit-mask: linear-gradient(45deg, transparent 16px, #fff 0) bottom
            left,
          linear-gradient(-45deg, transparent 0 0, #fff 0) bottom right,
          linear-gradient(135deg, transparent 0 0, #fff 0) top left,
          linear-gradient(-135deg, transparent 0 16px, #fff 0) top right;
        -webkit-mask-size: 50.5% 50.5%;
        -webkit-mask-repeat: no-repeat;
      }

      .cut-corners-xl {
        --all: 0px;
        -webkit-mask: linear-gradient(45deg, transparent 32px, #fff 0) bottom
            left,
          linear-gradient(-45deg, transparent 0 0, #fff 0) bottom right,
          linear-gradient(135deg, transparent 0 0, #fff 0) top left,
          linear-gradient(-135deg, transparent 0 32px, #fff 0) top right;
        -webkit-mask-size: 50.5% 50.5%;
        -webkit-mask-repeat: no-repeat;
      }
    </style>
  </head>
  <body class="font-roboto-condensed overflow-x-hidden">
    <Header />
    <div style={{ marginTop: metadata.banner ? "-2.25rem" : "" }}>
      <slot />
    </div>
  </body>
</html>
