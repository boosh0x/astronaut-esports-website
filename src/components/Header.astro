---
import NavLink from "./NavLink.astro";

import { metadata } from "../layouts/Layout.astro";
import Banner from "./Banner.astro";
---

{metadata.banner ? <Banner /> : ""}
<header
  style={{
    "-webkit-background-clip": "text",
  }}
  class="flex items-center justify-between p-8 max-sm:p-6 sticky top-0 bg-clip-text z-50 w-full bg-white"
>
  <a href="/" draggable={false}>
    <img
      src="/logo.png"
      alt="Astronaut Esports Logo"
      class="w-16 h-16 select-none hover:scale-110 transition-transform duration-300"
      draggable={false}
    />
  </a>
  <nav class="flex gap-6 font-stargaze select-none">
    <div class="max-[450px]:hidden flex">
      <NavLink href="#teams">Teams</NavLink>
    </div>
    <NavLink href="#news">News</NavLink>
    <NavLink href="#schedule">Schedule</NavLink>
  </nav>
</header>
