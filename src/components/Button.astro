---
const { href } = Astro.props;
---

<a
  href={href}
  draggable={false}
  class="text-white cursor-pointer select-none px-8 py-4 cut-corners from-blue to-purple bg-gradient-to-r"
  style="--all:0px;--bottom-left:10px;--top-right:10px;"
>
  <slot />
</a>

<style>
  .cut-corners {
    --all: 0px;
    -webkit-mask: linear-gradient(
          45deg,
          transparent 0 var(--bottom-left, var(--all)),
          #fff 0
        )
        bottom left,
      linear-gradient(
          -45deg,
          transparent 0 var(--bottom-right, var(--all)),
          #fff 0
        )
        bottom right,
      linear-gradient(135deg, transparent 0 var(--top-left, var(--all)), #fff 0)
        top left,
      linear-gradient(
          -135deg,
          transparent 0 var(--top-right, var(--all)),
          #fff 0
        )
        top right;
    -webkit-mask-size: 50.5% 50.5%;
    -webkit-mask-repeat: no-repeat;
  }
</style>
